<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:padding="@dimen/dialog_layout_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You will receive notifications from a chosen leader such as change in the leaders schedule."/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onCheckboxClicked"
            android:text="Janet"
            android:id="@+id/janetCheckBox"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onCheckboxClicked"
            android:text="Adam"
            android:id="@+id/adamCheckBox"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onCheckboxClicked"
            android:text="Smriti"
            android:id="@+id/smritiCheckBox"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onCheckboxClicked"
            android:text="Margot"
            android:id="@+id/margotCheckBox"/>



    </LinearLayout>


</ScrollView>