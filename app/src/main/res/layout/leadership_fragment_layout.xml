<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/leadership_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="@dimen/toolbar_elevation"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="@dimen/card_elevation"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_president"
                            android:layout_width="130dp"
                            android:layout_height="173dp"
                            android:layout_gravity="left"
                            android:paddingStart="10dp"
                            android:paddingLeft="10dp"

                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_alignParentTop="true"
                                android:paddingLeft="0dp"
                                android:layout_toRightOf="@+id/image_president"
                                android:layout_toEndOf="@+id/image_president"
                                android:id="@+id/linearLayoutPresident">

                                <TextView
                                    android:id="@+id/name_president"
                                    android:text="Robert Gutierrez​"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="24dp"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="16dp"
                                    android:textSize="24sp"
                                    android:scrollHorizontally="false"
                                    android:ellipsize="end"
                                    android:textColor="@color/primary_text"/>

                                <TextView
                                    android:id="@+id/title_president"
                                    android:text="Director"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/primary_text"
                                    android:textSize="15sp"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="2dp"/>

                                <TextView
                                    android:id="@+id/room_president"
                                    android:text="Room M-104"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="2dp"/>
                            </LinearLayout>


                        <Button
                            android:id="@+id/button_email_president"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="14dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailDirector"
                            android:layout_below="@+id/linearLayoutPresident"
                            android:layout_toRightOf="@+id/button_call_president"
                            android:layout_toEndOf="@+id/button_call_president" />

                        <Button
                            android:id="@+id/button_call_president"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="30dp"
                            android:text="CALL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callDirector"
                            android:layout_below="@+id/linearLayoutPresident"
                            android:layout_toRightOf="@+id/image_president"
                            android:layout_toEndOf="@+id/image_president" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="@dimen/card_elevation"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_vice_president_academic_affairs"
                            android:layout_width="130dp"
                            android:layout_height="183dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="left"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="10dp"
                            android:layout_toRightOf="@+id/image_vice_president_academic_affairs"
                            android:layout_toEndOf="@+id/image_vice_president_academic_affairs"
                            android:id="@+id/linearLayoutVP_Academic_Affairs">

                            <TextView
                                android:id="@+id/name_vp_academic_affairs"
                                android:text="Alex Lopez"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="24dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="16dp"
                                android:textSize="24sp"
                                android:scrollHorizontally="false"
                                android:ellipsize="end"
                                android:textColor="@color/primary_text"/>

                            <TextView
                                android:id="@+id/title_vp_academic_affairs"
                                android:text="Academic Counselor​"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>

                            <TextView
                                android:id="@+id/room_vp_academic_affairs"
                                android:text="Room M-104"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>
                        </LinearLayout>


                        <Button
                            android:id="@+id/button_email_vp_academic_affairs"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="14dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailAcademicCounselor"
                            android:layout_below="@+id/linearLayoutVP_Academic_Affairs"
                            android:layout_toRightOf="@+id/button_call_vp_academic_affairs"
                            android:layout_toEndOf="@+id/button_call_vp_academic_affairs" />

                        <Button
                            android:id="@+id/button_call_vp_academic_affairs"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL"
                            android:paddingLeft="-2dp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callAcademicCounselor"
                            android:layout_below="@+id/linearLayoutVP_Academic_Affairs"
                            android:layout_toRightOf="@+id/image_vice_president_academic_affairs"
                            android:layout_toEndOf="@+id/image_vice_president_academic_affairs" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="@dimen/card_elevation"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_vice_president_student_affairs"
                            android:layout_width="130dp"
                            android:layout_height="183dp"
                            android:layout_gravity="left"
                            android:paddingLeft="10dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="10dp"
                            android:layout_toRightOf="@+id/image_vice_president_student_affairs"
                            android:layout_toEndOf="@+id/image_vice_president_student_affairs"
                            android:id="@+id/linearLayoutVP_Student_Affairs">

                            <TextView
                                android:id="@+id/name_vp_student_affairs"
                                android:text="Elizabeth Flores​"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="24dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="16dp"
                                android:textSize="24sp"
                                android:scrollHorizontally="false"
                                android:ellipsize="end"
                                android:textColor="@color/primary_text"/>

                            <TextView
                                android:id="@+id/title_vp_student_affairs"
                                android:text="Program Specialist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>

                            <TextView
                                android:id="@+id/room_vp_student_affairs"
                                android:text="Room M-104"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>
                        </LinearLayout>


                        <Button
                            android:id="@+id/button_email_vp_student_affairs"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="14dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailProgramSpecialist"
                            android:layout_below="@+id/linearLayoutVP_Student_Affairs"
                            android:layout_toRightOf="@+id/button_call_vp_student_affairs"
                            android:layout_toEndOf="@+id/button_call_vp_student_affairs" />

                        <Button
                            android:id="@+id/button_call_vp_student_affairs"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL"
                            android:paddingLeft="-2dp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callProgramSpecialist"
                            android:layout_below="@+id/linearLayoutVP_Student_Affairs"
                            android:layout_toRightOf="@+id/image_vice_president_student_affairs"
                            android:layout_toEndOf="@+id/image_vice_president_student_affairs" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="@dimen/card_elevation"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_vice_president_admn"
                            android:layout_width="130dp"
                            android:layout_height="183dp"
                            android:paddingLeft="10dp"
                            android:layout_gravity="left"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="10dp"
                            android:layout_toRightOf="@+id/image_vice_president_admn"
                            android:layout_toEndOf="@+id/image_vice_president_admn"
                            android:id="@+id/linearLayoutVP_Admn">

                            <TextView
                                android:id="@+id/name_vp_admn"
                                android:text="​Angela Gullerud"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="24dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="16dp"
                                android:textSize="24sp"
                                android:scrollHorizontally="false"
                                android:ellipsize="end"
                                android:textColor="@color/primary_text"/>

                            <TextView
                                android:id="@+id/title_vp_admn"
                                android:text="Program​ Coordinator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary_text"
                                android:textSize="15sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>

                            <TextView
                                android:id="@+id/room_vp_admn"
                                android:text="Room M-104"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="2dp"/>
                        </LinearLayout>


                        <Button
                            android:id="@+id/button_email_vp_admn"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="14dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailProgramCoordinator"
                            android:layout_below="@+id/linearLayoutVP_Admn"
                            android:layout_toRightOf="@+id/button_call_vp_admn"
                            android:layout_toEndOf="@+id/button_call_vp_admn" />

                        <Button
                            android:id="@+id/button_call_vp_admn"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL"
                            android:paddingLeft="-2dp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callProgramCoordinator"
                            android:layout_below="@+id/linearLayoutVP_Admn"
                            android:layout_toRightOf="@+id/image_vice_president_admn"
                            android:layout_toEndOf="@+id/image_vice_president_admn" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>










            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>



