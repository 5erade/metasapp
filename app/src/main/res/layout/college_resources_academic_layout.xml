<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/metas_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:maxLines="3"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/primary_text"
                        android:text="Metas Center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Metas Center offers tutoring in STEM related fields through SI and PLTL workshops. Students can borrow textbooks and calculators."
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="M-Building Room-104"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="8:00AM-7:00PM"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="CALL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callMetas" />
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailMetas" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="WEB"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="web"
                            android:onClick="webMetas" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:maxLines="3"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/primary_text"
                        android:text="Library"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Library staff can assist in your search for books, magazines, articles in databases as well as help you with proper citation. PCs are located on 1st and 2nd floors. 3rd floor is a quite study area"
                        android:textColor="@color/primary_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="8:30AM-7:00PM"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="CALL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callLibrary" />
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailLibrary" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="WEB"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="web"
                            android:onClick="webLibrary" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:maxLines="3"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/primary_text"
                        android:text="Tutoring Center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Tutoring Center supports SJCC students by providing free one-to-one and group tutoring for many academic subjects offered on campus."
                        android:textColor="@color/primary_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Library, L-105"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="8:30AM-7:00PM"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailTutoringCenter" />
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="WEB"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="web"
                            android:onClick="webTutoringCenter" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="@dimen/card_elevation"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:maxLines="3"
                        android:scrollHorizontally="false"
                        android:ellipsize="end"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/primary_text"
                        android:text="Reading &amp; Writing Center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Reading &amp; Writing Center (RWC) offers a supportive, friendly, and comfortable environment. We can help with reading and writing questions for any SJCC course. RWC offers PCs with internet connection as well as quite study area."
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Library, LRC-103"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:maxLines="10"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="8:30AM-7:00PM"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="CALL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="phone"
                            android:onClick="callRWC" />
                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="EMAIL"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="email"
                            android:onClick="emailRWC" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="16dp"
                            android:text="WEB"
                            android:textStyle="bold"
                            android:textColor="@color/accent"
                            android:autoLink="web"
                            android:onClick="webRWC" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>