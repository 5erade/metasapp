<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

    </style>

    <style name="CustomToolbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="AlertDialog.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="CustomToolbarTextTransparent" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>